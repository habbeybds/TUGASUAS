<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7086F5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="${relativePackage}.${activityClass}" >
	
    <TextView
        android:id="@+id/txtDaftarDosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="TAMBAH DOSEN"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="sans" />
       
    <EditText
        android:id="@+id/etname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDaftarDosen"
        android:layout_marginBottom="4dp"
        android:hint="John Doe"
        android:textColor="#ffffff"
        android:textColorHint="#eaeaea"
        android:textStyle="bold" />
    
    <EditText
        android:id="@+id/etdob"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etname"
        android:layout_marginBottom="4dp"
        android:hint="0000-00-00"
        android:textColor="#ffffff"
        android:textColorHint="#eaeaea"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btsimpan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etdob"
        android:layout_centerVertical="true"
        android:background="@drawable/mybutton"
        android:text="SIMPAN"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/textView1"
        android:text="Masuk!"
        android:textColor="@color/txt_login_effect"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDaftarMahasiswa"
        android:layout_below="@+id/btsimpan"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="19dp"
        android:text="Sudah punya akun?"
        android:textColor="#FFFFFF" />

</RelativeLayout>
