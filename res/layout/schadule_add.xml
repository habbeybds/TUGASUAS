<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7086F5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="${relativePackage}.${activityClass}" >
	
    <TextView
        android:id="@+id/txtTambahJadwal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="TAMBAH JADWAL"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="sans" />
    
    <EditText
        android:id="@+id/etmatkul"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTambahJadwal"
        android:layout_marginBottom="4dp"
        android:hint="Judul Pertemuan"
        android:textColor="#ffffff"
        android:textColorHint="#eaeaea"
        android:textStyle="bold" />
    
    <EditText
        android:id="@+id/ettglPertemuan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etmatkul"
        android:layout_marginBottom="4dp"
        android:hint="Tanggal Pertemuan"
        android:textColor="#ffffff"
        android:textColorHint="#eaeaea"
        android:textStyle="bold"
        android:clickable="true"
        android:editable="false"
        android:focusable="false" />
    <EditText
        android:id="@+id/etjadwalmulai"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ettglPertemuan"
        android:layout_marginBottom="4dp"
        android:hint="Jadwal Mulai"
        android:textColor="#ffffff"
        android:textColorHint="#eaeaea"
        android:textStyle="bold" 
        android:clickable="true"
        android:editable="false"
        android:focusable="false"
        />
    
    <EditText
        android:id="@+id/etjadwalselesai"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etjadwalmulai"
        android:layout_marginBottom="4dp"
        android:hint="Jadwal Selesai"
        android:textColor="#ffffff"
        android:textColorHint="#eaeaea"
        android:textStyle="bold"
        android:clickable="true"
        android:editable="false"
        android:focusable="false" />

    <Button
        android:id="@+id/btsimpan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etjadwalselesai"
        android:layout_centerVertical="true"
        android:background="@drawable/mybutton"
        android:text="SIMPAN"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:typeface="sans" />

</RelativeLayout>
