<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7086F5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="${relativePackage}.${activityClass}" >
	
    <TextView
        android:id="@+id/tvCheckSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Check In"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="sans" />
    
    <TextView
        android:id="@+id/tvtolecturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCheckSchedule"
        android:text="Lecturer:"
        android:layout_marginBottom="50dp"
        android:textColor="#fff200"
        android:textSize="18sp"
        android:textStyle="bold" />
    
    <Spinner
        android:id="@+id/sptolecturer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sptoschedule"
        android:layout_below="@+id/tvCheckSchedule"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/tvtolecturer" />

    <TextView
        android:id="@+id/tvtoschedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtolecturer"
        android:text="Schedule:"
        android:textColor="#fff200"
        android:textSize="18sp"
        android:textStyle="bold" />
    
    <Spinner 
        android:id="@+id/sptoschedule"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginBottom="20dp"
    	android:layout_toEndOf="@+id/tvtoschedule"
    	android:layout_below="@+id/tvtolecturer"
        />
    
    <Button
        android:id="@+id/btsimpan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sptoschedule"
        android:layout_centerVertical="true"
        android:background="@drawable/mybutton"
        android:text="SIMPAN"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:typeface="sans" />
    
</RelativeLayout>
