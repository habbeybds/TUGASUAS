<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="@drawable/card_background_selector"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tvsubjectName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:textSize="16sp"
        android:textStyle="bold" />
    
	<TextView
        android:id="@+id/txtJadwalMasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvsubjectName"
        android:text="Jadwal Masuk"
        android:layout_marginBottom="2dp" />
	
	<TextView
        android:id="@+id/tvtimeIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtJadwalMasuk"
        android:layout_alignBottom="@+id/txtJadwalMasuk"
        android:layout_alignParentRight="true"
        android:paddingBottom="2dip"
        android:paddingLeft="20dp" />
	
	<TextView
        android:id="@+id/txtJadwalKeluar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtJadwalMasuk"
        android:text="Jadwal Keluar"/>
	
	<TextView
        android:id="@+id/tvtimeOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtJadwalKeluar"
        android:layout_alignBottom="@+id/txtJadwalKeluar"
        android:layout_alignParentRight="true"
        android:paddingBottom="2dip"
        android:paddingLeft="20dp" />


</RelativeLayout>
